{
  "title": "Geolocation Coordinates",
  "description": "The geo-coordinates (latitude & longitude) of the primary location of the entity",
  "type": "object",
  "properties": {
    "lat": {
      "type": "number",
      "minimum": -90,
      "maximum": 90,
      "context": "https://schema.org/latitude"
    },
    "lon": {
      "type": "number",
      "minimum": -180,
      "maximum": 180,
      "context": "https://schema.org/longitude"
    }
  },
  "required": [
    "lat",
    "lon"
  ],
  "context": "https://schema.org/geo"
}