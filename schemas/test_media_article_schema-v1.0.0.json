{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://library.murmurations.network/v2/schemas/media_schema-v1.0.0",
  "title": "Media Element Schema",
  "description": "A schema to add media elements to the Murmurations Index",
  "type": "object",
  "properties": {
    "linked_schemas": {
      "$ref": "../fields/linked_schemas.json"
    },
    "title": {
      "$ref": "../fields/name.json",
      "title": "Article Title",
      "description": "The title of the article"
    },
    "article_url": {
      "$ref": "../fields/url.json",
      "title": "Article URL",
      "description": "URL of the article"
    },
    "author": {
      "$ref": "../fields/name.json",
      "title": "Author",
      "description": "Author of an article"
    },
    "tags": {
      "$ref": "../fields/tags.json",
      "title": "Tags/Type",
      "description": "Keywords that describe the article"
    },
    "description": {
      "$ref": "../fields/description.json",
      "title": "Description",
      "description": "A short description of the article"
    },
    "geolocation": {
      "$ref": "../fields/geolocation.json",
      "title": "Article location",
      "description": "Geolocation of the place that the article describes"
    }
  },
  "required": [
    "linked_schemas",
    "title",
    "article_url"
  ],
  "metadata": {
    "creator": {
      "name": "Mateusz Adamczak"
    },
    "schema": {
      "name": "media_schema-v1.0.0",
      "purpose": "To map media elements",
      "url": "https://murmurations.network"
    }
  }
}
