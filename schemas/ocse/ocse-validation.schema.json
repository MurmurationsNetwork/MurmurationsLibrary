{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/MurmurationsNetwork/MurmurationsLibrary/master/",
    "title": "Open Co-op Solidarity Economy Schema",
    "description": "The OCSE Schema defines a structure for categorizing organizations and projects operating within the Solidarity Economy.",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the organization or project",
            "type": "string"
        },
        "url": {
            "description": "The main website of the organization or project",
            "type": "string",
            "pattern": "^(?:(?:(?:https?|ftp):)?//)(?:S+(?::S*)?@)?(?:(?!(?:10|127)(?:.d{1,3}){3})(?!(?:169.254|192.168)(?:.d{1,3}){2})(?!172.(?:1[6-9]|2d|3[0-1])(?:.d{1,3}){2})(?:[1-9]d?|1dd|2[01]d|22[0-3])(?:.(?:1?d{1,2}|2[0-4]d|25[0-5])){2}(?:.(?:[1-9]d?|1dd|2[0-4]d|25[0-4]))|(?:(?:[a-z\u00a1-\uffff0-9]-*)*[a-z\u00a1-\uffff0-9]+)(?:.(?:[a-z\u00a1-\uffff0-9]-*)*[a-z\u00a1-\uffff0-9]+)*(?:.(?:[a-z\u00a1-\uffff]{2,})))(?::d{2,5})?(?:[/?#]S*)?$"
        },
        "tagline": {
            "description": "A short description of the organization or project",
            "type": "string"
        },
        "mission": {
            "$ref": "fields/mission.js"
        },
        "nodeTypes": {
            "description": "Types of organization or project",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "",
                        "type": "string"
                    },
                    "url": {
                        "description": "",
                        "type": "string",
                        "pattern": "https://www.wikidata.org/wiki/Q"
                    }
                },
                "required": [
                    "name",
                    "url"
                ]
            },
            "minItems": 1
        },
        "location": {
            "description": "A description of where the organization is located or where the project started or is based",
            "type": "string"
        },
        "geo": {
            "description": "Geo-coordinates of the primary location of the organization or project",
            "type": "object",
            "properties": {
                "latitude": {
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                },
                "longitude": {
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                }
            },
            "required": [
                "latitude",
                "longitude"
            ]
        },
        "logo": {
            "description": "A URL of the organization's or project's logo",
            "type": "string",
            "pattern": "https?://"
        },
        "tags": {
            "description": "The most common tags used to describe the organization or project",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "name",
        "url",
        "nodeTypes"
    ]
}