{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://test-library.murmurations.network/v2/schemas/person_schema-v0.1.0",
  "title": "Personal Profile",
  "description": "A profile of a person (living, deceased or fictional).",
  "type": "object",
  "properties": {
    "linked_schemas": {
      "$ref": "../fields/linked_schemas.json"
    },
    "name": {
      "$ref": "../fields/name.json"
    },
    "first_name": {
      "$ref": "../fields/first_name.json"
    },
    "last_name": {
      "$ref": "../fields/last_name.json"
    },
    "primary_url": {
      "$ref": "../fields/primary_url.json"
    },
    "email": {
      "$ref": "../fields/email.json"
    },
    "telephone": {
      "$ref": "../fields/telephone.json"
    },
    "description": {
      "$ref": "../fields/description.json"
    },
    "image": {
      "$ref": "../fields/image.json"
    },
    "urls": {
      "$ref": "../fields/urls.json"
    },
    "locality": {
      "$ref": "../fields/locality.json"
    },
    "geolocation": {
      "$ref": "../fields/geolocation.json"
    },
    "job_title": {
      "$ref": "../fields/job_title.json"
    },
    "knows_language": {
      "$ref": "../fields/knows_language.json"
    },
    "member_of": {
      "title": "Member of",
      "description": "Names and links of entities of which this entity is a member.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "description": "The name of the entity.",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "description": "The URL (starting with http:// or https://) of the primary URL or Murmurations Profile URL for the entity.",
            "type": "string",
            "maxLength": 2000,
            "pattern": "^https?://.*"
          }
        },
        "required": [
          "url"
        ]
      },
      "uniqueItems": true
    },
    "knows": {
      "title": "Knows",
      "description": "Names and links to people known by this person.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "description": "The name of the person.",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "description": "The URL (starting with http:// or https://) of the primary URL or Murmurations Profile URL for the person.",
            "type": "string",
            "maxLength": 2000,
            "pattern": "^https?://.*"
          }
        },
        "required": [
          "url"
        ]
      },
      "uniqueItems": true
    }
  },
  "required": [
    "linked_schemas"
  ],
  "metadata": {
    "creator": {
      "name": "Murmurations Network",
      "url": "https://murmurations.network/"
    },
    "schema": {
      "name": "person_schema-v0.1.0",
      "purpose": "A personal profile schema to encourage cross platform and network discovery and synergy.",
      "url": "https://murmurations.network"
    }
  }
}
