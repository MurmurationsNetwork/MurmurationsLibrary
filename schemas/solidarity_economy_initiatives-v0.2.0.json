{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://main-cdn.murmurations.network/schemas/solidarity_economy_initiatives-v0.2.0.json",
  "title": "Solidarity Economy Initiatives",
  "description": "Describes an initiative in the Solidarity Economy. FIXME and WARNING: this is experimental!!",
  "type": "object",
  "propertyNames": {
    "pattern": "^[a-z0-9_]*$"
  },
  "properties": {
    "linked_schemas": {
      "$ref": "../fields/linked_schemas.json"
    },
    "ld_uri": {
      "$ref": "../fields/urls.json",
      "title": "Linked-Data URI",
      "description": "The URI for the entity or item"
    },
    "name": {
      "$ref": "../fields/name.json"
    },
    "description": {
      "$ref": "../fields/description.json"
    },
    "website": {
      "$ref": "../fields/url.json"
    },
    "locality": {
      "$ref": "../fields/locality.json"
    },
    "region": {
      "$ref": "../fields/region.json"
    },
    "country_name": {
      "$ref": "../fields/country_name.json"
    },
    "geolocation": {
      "$ref": "../fields/geolocation.json"
    },
    "tags": {
      "$ref": "../fields/tags.json",
      "title": "Org Type - freeform tags",
      "description": "What type of Organisation is this? e.g. Private limited company, School, Co-op, etc."
    }
  },
  "required": [
    "linked_schemas",
    "name",
    "ld_uri"
  ],
  "metadata": {
    "creator": {
      "name": "Solidarity Economy Association",
      "url": "https://www.solidarityeconomy.coop/"
    },
    "schema": {
      "name": "solidarity_economy_initiatives-v0.2.0",
      "purpose": "A map of organisations within the solidarity economy."
    }
  }
}
