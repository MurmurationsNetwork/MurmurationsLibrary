{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://test-cdn.murmurations.network/schemas/person_schema-v0.1.0.json",
  "title": "Personal Profile",
  "description": "A profile of a person (living, deceased or fictional).",
  "type": "object",
  "properties": {
    "linked_schemas": {
      "$ref": "../fields/linked_schemas.json"
    },
    "first_name": {
      "$ref": "../fields/first_name.json"
    },
    "last_name": {
      "$ref": "../fields/last_name.json"
    },
    "primary_url": {
      "$ref": "../fields/primary_url.json"
    },
    "email": {
      "$ref": "../fields/email.json"
    },
    "telephone": {
      "$ref": "../fields/telephone.json"
    },
    "description": {
      "$ref": "../fields/description.json"
    },
    "image": {
      "$ref": "../fields/image.json"
    },
    "urls": {
      "$ref": "../fields/urls.json"
    },
    "locality": {
      "$ref": "../fields/locality.json"
    },
    "geolocation": {
      "$ref": "../fields/geolocation.json"
    },
    "job_title": {
      "$ref": "../fields/job_title.json"
    },
    "knows_language": {
      "$ref": "../fields/knows_language.json"
    },
    "member_of": {
      "$ref": "../fields/urls.json",
      "title": "Member of",
      "description": "Add the names and URLs (primary URLs or preferably Murmurations .json Profile URLs) of the organization(s) and/or project(s) to which this person belongs."
    },
    "knows": {
      "$ref": "../fields/urls.json",
      "title": "Knows",
      "description": "Add the names and URLs (primary URLs or preferably Murmurations .json Profile URLs) of people this person knows."
    }
  },
  "required": ["linked_schemas", "first_name", "last_name"],
  "metadata": {
    "creator": {
      "name": "Murmurations Network",
      "url": "https://murmurations.network/"
    },
    "schema": {
      "name": "person",
      "version": "2.0.0",
      "purpose": "A personal profile schema to encourage cross platform and network discovery and synergy.",
      "url": "https://murmurations.network"
    }
  }
}
